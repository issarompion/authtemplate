{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "esnext",
    "strict": true,
    "types": [
      "node",
      "express",
      "bcryptjs",
      "jsonwebtoken",
      "mongoose"
    ],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@helpers": ["src/helpers/index"],
      "@models": ["src/models/index"],
      "@routes": ["src/routes/index"],
      "@services": ["src/services/index"],
      "@utils": ["src/utils/index"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
